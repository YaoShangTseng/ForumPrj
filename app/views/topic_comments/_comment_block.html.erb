<%= form_for [@topic, @comment]  do |f|  %>

  <% if @comment.errors.any? %>
    <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>

  <div>
    <%= f.label :content, "Content" %>
    <%= f.text_area :content %>
  </div>

  <div>
    <%= f.file_field :pic %>
    <% if @comment.pic.exists? %>
      <%= check_box_tag "_remove_pic", "1" %> Remove Pic
   <% end %>
  </div>

  <div>
    <%= f.label :status, "Status" %>
    <%= f.select :status, [["draft","draft"],["release","release"]] %>
  </div>

  <%= f.submit "Save" %>

<% end %>
