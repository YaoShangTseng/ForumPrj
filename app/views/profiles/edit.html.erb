<%= form_for @profile, :url => profile_path(@profile), :method => :patch do |f| %>

  <% if @profile.errors.any? %>
    <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </div>

  <div class="field">
    <%= f.label :role %>
    <%= f.select :role, [["Normal", "normal"], ["Admin", "admin"]], :class => "form-control" %>
  </div>

  <div>
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
